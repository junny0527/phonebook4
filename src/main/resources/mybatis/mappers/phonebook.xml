<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">

	<resultMap id="resultMapPersonVo" type="PersonVo">
		<result column="person_id" property="personId" />
		<result column="name" property="name" />
		<result column="hp" property="hp" />
		<result column="company" property="company" />
	</resultMap>




	<select id="selectList" resultMap="resultMapPersonVo">
      <![CDATA[   
      select person_id
            ,name
            ,hp
            ,company
      from person
      order by person_id desc
      ]]>
	</select>


	<insert id="personInsert" parameterType="PersonVo">
      <![CDATA[
      insert into person
      values (seq_person_id.nextval, #{name}, #{hp}, #{company})
      ]]>
	</insert>

	<insert id="personInsert2" parameterType="map">
      <![CDATA[
      insert into person
      values (seq_person_id.nextval, #{name}, #{hp}, #{company})
      ]]>
	</insert>

	<delete id="personDelete" parameterType="int">
      <![CDATA[
      delete from person
      where person_id = #{no}   
      ]]>
	</delete>

	<select id="getPerson" resultMap="resultMapPersonVo"
		parameterType="int">
      <![CDATA[
      select person_id
            ,name
            ,hp
            ,company
      from person
      where person_id = #{no}      
      ]]>
	</select>

	<select id="getPerson2" resultType="map" parameterType="int">
      <![CDATA[
      select person_id personId
            ,name
            ,hp
            ,company
      from person
      where person_id = #{no}      
      ]]>
	</select>


	<update id="personUpdate" parameterType="PersonVo">
      <![CDATA[
      UPDATE person
      SET name = #{name}
          ,hp = #{hp}
           ,company = #{company}
        WHERE person_id = #{personId}
      ]]>
	</update>



</mapper>